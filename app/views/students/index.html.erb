<p id="notice"><%= notice %></p>

<h1>Students</h1>

<p>
  Download:
  <%=  link_to 'Excel', students_path(format: :xlsx) %>
</p>

<table>
  <thead>
    <tr>
      <th>StudentID</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone number</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.Student_ID %></td>
        <td><%= student.First_Name %></td>
        <td><%= student.Last_Name %></td>
        <td><%= student.Phone_Number %></td>
        <td><%= student.Email %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>



<br>
<%= link_to 'New Student', new_student_path %>
