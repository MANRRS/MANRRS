<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Students</title>
</head>
<body id="body-pd">

  <h1>Admin Messages</h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Admin</th>
        <th>Text</th>
        <th>Date created</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @messages.each do |message| %>
        <tr>
          <td><%= message.admin_id %></td>
          <td><%= message.text %></td>
          <td><%= message.date_created %></td>
          <td><%= link_to '<i class="bx bx-search nav_icon"></i>'.html_safe, message %></td>
          <td><%= link_to '<i class="bx bx-pencil nav_icon"></i>'.html_safe, edit_message_path(message) %></td>
          <td><%= link_to '<i class="bx bx-trash nav_icon"></i>'.html_safe, message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br> 

</body>
</html>

