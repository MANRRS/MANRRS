<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Students</title>
</head>
<body id="body-pd">

  <h1>Message Histories</h1>

  <p id="notice"><%= notice %></p>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Message ID</th>
        <th>Date sent</th>
        <th>Student ID</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @message_histories.each do |message_history| %>
        <tr>
          <td><%= message_history.message_id %></td>
          <td><%= message_history.date_sent %></td>
          <td><%= message_history.student_id %></td>
          <td><%= link_to 'Show', message_history %></td>
          <td><%= link_to 'Edit', edit_message_history_path(message_history) %></td>
          <td><%= link_to 'Destroy', message_history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br> 

</body>
</html>

